
@{
    ViewBag.Title = "Guest";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<div id="splash"></div>

<div id="content">
    <div class="post">
        <h2 style="font-family: 'Times New Roman', Times, serif; font-size: xx-large; color: #FF9900; font-weight: bold; margin-bottom: 20px;">
            Guest User
        </h2>
        <div class="entry">
            <p style="font-size: 18px; font-weight: normal; margin-bottom: 20px;">
                As a guest user, you can only view details of the faculty, students, uploaded assignments. 
            </p>

            <p style="font-size: 18px; font-weight: bold;">
                If you want to view the full functionalities, please contact:<a href="mailto:littutheresas@gmail.com">littutheresas@gmail.com</a>
            </p>
            
        </div>
    </div>
    <div class="post">
        <div class="entry">
        </div>
    </div>
    <div style="clear: both;">&nbsp;</div>
</div>
<!-- end #content -->

<div id="sidebar" style="margin-top: 125px;">
    <ul>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Faculty Details", "GuestIndex", "Faculty", null, new { style = "color: black;" })
        </li>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Student Details", "GuestIndex", "Student", null, new { style = "color: black;" })
        </li>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Assignments Details", "Index", "Assignment", null, new { style = "color: black;" })
        </li>
        
    </ul>
</div>
<!-- end #sidebar -->
<div style="clear: both;">&nbsp;</div>


