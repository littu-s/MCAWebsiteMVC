@model MCAWebsiteMVC.Models.Assignment

@{
    ViewBag.Title = "Details";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<div id="splash"></div>

<div id="content">
    <div class="post">
        <h2 style="font-family: 'Times New Roman', Times, serif; font-size: xx-large; color: #FF9900;  margin-bottom: 20px;">
            Assignment Details
        </h2>
        <div class="entry">
            <div>
                <dl class="dl-horizontal" style="font-size:medium;">
                    <dt style="margin-top:10px;">
                        @Html.DisplayNameFor(model => model.Subject.sub_name)
                    </dt>

                    <dd style="margin-top:20px;">
                        @Html.DisplayFor(model => model.Subject.sub_name)
                    </dd>

                    <dt style="margin-top:10px;">
                        @Html.DisplayName("Faculty")
                    </dt>

                    <dd style="margin-top:10px;">
                        @Html.DisplayFor(model => model.Faculty.fac_name)
                    </dd>

                    <dt style="margin-top:10px;">
                        @Html.DisplayName("Student")
                    </dt>

                    <dd style="margin-top:10px;">
                        @Html.DisplayFor(model => model.Student.stud_name)
                    </dd>

                    <dt style="margin-top:10px;">
                        @Html.DisplayNameFor(model => model.assign_title)
                    </dt>

                    <dd style="margin-top:10px;">
                        @Html.DisplayFor(model => model.assign_title)
                    </dd>

                    <dt style="margin-top:10px;">
                        @Html.DisplayNameFor(model => model.assign_file)
                    </dt>

                    <dd style="margin-top:10px;">
                        @Html.DisplayFor(model => model.assign_file)
                        <span>
                            <a href="~/Content/media/assignments/@Html.DisplayFor(model => model.assign_file)" target="_blank" class="btn btn-info" style="margin-left: 10px;">
                                View
                            </a>
                        </span>
                    </dd>

                </dl>
            </div>
            <div style="margin-left: 75px;">
                @Html.ActionLink("Back", "Index", "Assignment", null, new { @class = "btn btn-warning btn-lg", style = "margin-left: 20px;" })
            </div>
        </div>
    </div>

    <div style="clear: both;">&nbsp;</div>
</div>
<!-- end #content -->

<div id="sidebar" style="margin-top: 75px;">
    <ul>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Faculty Details", "GuestIndex", "Faculty", null, new { style = "color: black;" })
        </li>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Student Details", "GuestIndex", "Student", null, new { style = "color: black;" })
        </li>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Assignments Details", "Index", "Assignment", null, new { style = "color: black;" })
        </li>

    </ul>
</div>
<!-- end #sidebar -->
