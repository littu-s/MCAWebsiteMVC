@model IEnumerable<MCAWebsiteMVC.Models.Faculty>

@{
    ViewBag.Title = "Faculty Details";
}

<link href="~/Content/Site.css" rel="stylesheet" />

<div id="splash"></div>

<div id="content">
    <div class="post">
        <h2 style="font-family: 'Times New Roman', Times, serif; font-size: xx-large; color: #FF9900; margin-bottom: 20px;" align="center">
            Faculty Details
        </h2>
        <div class="entry">
            <table class="table" id="facultyTable" style="background-color: transparent; font-size: 14px;">
                <thead style="background-color: transparent;">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Login.uname)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fac_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fac_degree)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fac_doj)
                        </th>
                        
                        <th>Action</th>
                    </tr>
                </thead>
                   
                <tbody style="background-color: transparent;">
                    @foreach (var item in Model)
                    {
                        <tr style="background-color: transparent;">
                            <td>
                                @Html.DisplayFor(modelItem => item.Login.uname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fac_name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fac_degree)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fac_doj)
                            </td>
                            
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.fac_id }, new { @class = "btn btn-success btn-xs" })
                                @Html.ActionLink("Details", "Details", new { id = item.fac_id }, new { @class = "btn btn-info btn-xs" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.fac_id }, new { @class = "btn btn-danger btn-xs" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>   
    <div style="clear: both;">&nbsp;</div>
</div>
<!-- end #content -->
<div id="sidebar" style="margin-top: 200px;">
    <ul>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Add Faculty", "Create", "Faculty", new { style = "color: red;" })
        </li>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Student Details", "Index", "Student")
        </li>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Change Password", "Index", "Admin")
        </li>
        <li style="font-family: 'Times New Roman', Times, serif; font-size: medium; font-weight: bold; margin-bottom: 15px;">
            @Html.ActionLink("Logout", "Index", "Home")
        </li>
    </ul>
</div>
<!-- end #sidebar -->
<div style="clear: both;">&nbsp;</div>


<script>
    $(document).ready(function () {
        $('#facultyTable').DataTable();
    });
</script>


