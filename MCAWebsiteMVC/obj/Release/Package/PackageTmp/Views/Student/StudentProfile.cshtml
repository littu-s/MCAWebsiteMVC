                    @Html.DisplayNameFor(model => model.Semester.sem_no)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Semester.sem_no)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.stud_batch)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.stud_batch)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.stud_email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.stud_email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.stud_phone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.stud_phone)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.stud_dob)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.stud_dob)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.stud_house)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.stud_house)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.stud_street)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.stud_street)
                </dd>

