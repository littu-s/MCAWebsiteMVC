<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" type="text/css" />
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

</head>
<body>
    @*<div class="navbar navbar-inverse navbar-fixed-top wrapper" style="background: url(../../Content/images/img01.jpg) repeat-x left top;">*@
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="width: 90%;">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("MCA Department Website", "Index", "Home", new { area = "" }, new { @class = "navbar-brand menuitem" })
            </div>
            <div class="navbar-collapse collapse menu">
                <ul class="nav navbar-nav menuitem">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home", new { @class = "menuitem" })
                    </li>
                    <li>
                        @Html.ActionLink("About", "About", "Home", new { @class = "menuitem" })
                    </li>
                    <li>
                        @Html.ActionLink("Course", "Course", "Home", new { @class = "menuitem" })
                    </li>
                    <li>
                        @Html.ActionLink("Contact", "Contact", "Home", new { @class = "menuitem" })
                    </li>
                </ul>
            </div>
        </div>
    </div>  

    <div class="container body-content" style="width: 90%;">

        @RenderBody()
    </div>
    <footer style="margin-left: 0px; padding: 0px; margin-bottom: 0px;">
        <p align="center" style="font-size:small; margin-top: 10px;">&copy; @DateTime.Now.Year - MCA Department Website</p>
    </footer>


    @RenderSection("scripts", required: false)
</body>
</html>
